@page "/"
@using MudBlazor

<MudGrid Justify="Justify.Center">
    <MudItem>
        <MudPaper>
            <MudTextField @bind-Value="username" Label="Usuário" Variant="Variant.Outlined"></MudTextField>
        </MudPaper>
    </MudItem>
</MudGrid>
<MudGrid Justify="Justify.Center">
    <MudItem>
        <MudPaper>
            <MudTextField @bind-Value="password" Label="Senha" Variant="Variant.Outlined" InputType="@PasswordInput" Adornment="Adornment.End" />
        </MudPaper>
    </MudItem>
</MudGrid>
<MudGrid Justify="Justify.Center">
    <MudItem>
        <MudPaper>
            <MudButton OnClick="ValidateLogin" Variant="Variant.Filled" Size="Size.Large" Color="Color.Tertiary">Entrar</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>
